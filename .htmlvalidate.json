{
  "extends": ["html-validate:recommended"],
  "rules": {
    "no-dup-id": "error",
    "no-missing-references": "error",
    "heading-level": "error",
    "wcag/h32": "error",
    "wcag/h63": "error",
    "void-style": "off",
    "no-trailing-whitespace": "off",
    "attribute-boolean-style": "off",
    "no-inline-style": "off",
    "prefer-native-element": "off",
    "wcag/h30": "off",
    "empty-heading": "off",
    "doctype-style": "warn",
    "element-permitted-content": "warn"
  }
} 